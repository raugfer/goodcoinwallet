<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
    </style>
    <style name="TranslucenFullscreenTheme" parent="FullscreenTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="Welcome" parent="AppTheme" />

    <style name="Ethereum" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/ethereum</item>
        <item name="colorPrimaryDark">@color/ethereum_dark</item>
        <item name="android:statusBarColor">@color/ethereum_dark</item>
        <item name="colorAccent">@color/ethereum_lite</item>
    </style>
    <style name="Gud.Coin" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/gudcoin</item>
        <item name="colorPrimaryDark">@color/gudcoin_dark</item>
        <item name="android:statusBarColor">@color/gudcoin_dark</item>
        <item name="colorAccent">@color/gudcoin_lite</item>
    </style>
</resources>
